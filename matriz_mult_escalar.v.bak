module matriz_mult_escalar #(parameter N=3, WIDTH=8)(
	input signed [WIDTH-1:0] A [0:N-1][0:N-1],
	input signed [WIDTH-1:0] escalar,
	output reg signed [(WIDTH*2)-1:0] Resultado [0:N-1][0:N-1]
);
	integer i, j;
	always @(*) begin
		for(i=0;i<N;i=i+1)
			for(j=0;j<N;j=j+1)
				Resultado[i][j] = A[i][j] * escalar;
	end
endmodule
