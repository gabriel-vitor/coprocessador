// matriz_adicao.v
module matriz_adicao #(parameter N=3, WIDTH=8)(
	input signed [WIDTH-1:0] A [0:N-1][0:N-1],
	input signed [WIDTH-1:0] B [0:N-1][0:N-1],
	output reg signed [WIDTH:0] Resultado [0:N-1][0:N-1]
);
	integer i, j;
	always @(*) begin
		for(i=0;i<N;i=i+1) begin
			for(j=0;j<N;j=j+1) begin
				Resultado[i][j] = A[i][j] + B[i][j];
			end
		end
	end
endmodule
